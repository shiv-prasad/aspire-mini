{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "js"],
    "rootDir": "./tests",
    "testMatch": ["**/*.spec.ts"],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.spec.ts"
    ],
    "maxWorkers": 1
}